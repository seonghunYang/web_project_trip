extends ../layout

include ../includes/_paginate
//모델이름 products(여행상품)
block content
  .container
    h1.main-title 
      | 여행상품
      if product.total > 0
        .small 총 #{products.total} 여행상품이 있습니다.
    //-todo 정렬 드롭박스
    if products.total <= 0 
      .alert.alert-info 여행상품이 없습니다
    else
      .products
        each product in products.docs
          .products
            a.title(href=`/products/${product.id}`)= product.title
            include _product
      //todo 여행상품 리스트 맞게 수정
      +paginate(products, '/products', query)

