extends ../layout

include ../includes/_paginate
//-모델이름 products(여행상품)
block content
  .container
    h1.main-title 
      | 여행상품
      if products.total > 0
        .small 총 #{products.total} 여행상품이 있습니다.
    //-todo 정렬 드롭박스
    if !products.total  
      .alert.alert-info 여행상품이 없습니다
    else
      .products
        each product in products.docs
          .products.d-flex
            include _product
            if(currentUser)
              if(currentUser.admin)
                dd.col-md-12
                  a.btn.btn-primary(href= `/guide/${product.id}/userlist`) 예약 관리
            hr
      //-todo 여행상품 리스트 맞게 수정
      +paginate(products, '/products', query)

