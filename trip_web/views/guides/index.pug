extends ../layout

block content
  .container
    h1.main-title 가이드 정보
     
    each user in users
      dl.row
        dt.col-md-3 Name
        dd.col-md-9= user.name 
        dt.col-md-3 Email
        dd.col-md-9
          a(href=`mailto:${user.email}`)= user.email

        dt.col-md-3 Created At
        dd.col-md-9= user.createdAt
          
          .button        
            a.btn.btn-sm.btn-outline-secondary(href=`/guides/${user._id}`) 
                    | #[i.fa.fa-search] 상세보기
                  

      