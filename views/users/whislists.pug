extends ../layout

include ../includes/_paginate
block content
  .container
    h1.main-title 
      | wishlist
      if whislists.total > 0
        .small 총 #{whislists.total} 여행상품이 있습니다.

    if !whislists.total  
      .alert.alert-info wishlist가 없습니다.
    else
      .whislists
        each whislist in whislists.docs
          .whislists
            a.title(href=`/products/${whislist.product.id}`)= whislist.product.title
            include _whislist
      //todo 여행상품 리스트 맞게 수정
      +paginate(whislists, `/users/whislist/${currentUser._id}`, query)
