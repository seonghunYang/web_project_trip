.comment.card
  .card-body.d-flex
    img.col-md-2.img-fluid(src= product.img)
    .comment.card.col-md-10
      .row.d-flex.justifiy-content-between
        h4.title= comment.title
        .starrating
          - var n=0;
          while n < comment.starpoint
            span.fa.fa-star
            - n++
      .content= comment.content
  .row.card-body
    .col-md
    .col-md.text-right
      .author
        | commented on #{moment(comment.createdAt).format('YYYY-MM-DD')}
        if comment.author
          | 
          | by #[a(href=`/users/${comment.author.id}`)= comment.author.name]
